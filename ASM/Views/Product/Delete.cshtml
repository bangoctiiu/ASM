@model ASM.Models.Product

@{
    ViewData["Title"] = "Xác nhận xóa sản phẩm";
}

<div class="container mt-4" style="max-width: 700px;">
    <h1>@ViewData["Title"]</h1>
    <h3 class="text-danger">Bạn có chắc chắn muốn xóa sản phẩm này không?</h3>
    <hr />

    <div>
        <h4>Sản phẩm: @Model.Name</h4>
        <dl class="row mt-3">
            <dt class="col-sm-3">Mô tả</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Số lượng</dt>
            <dd class="col-sm-9">@Model.Quantity</dd>

            <dt class="col-sm-3">Giá</dt>
            <dd class="col-sm-9">@Model.Price.ToString("N0") VNĐ</dd>

            <dt class="col-sm-3">Danh mục</dt>
            <dd class="col-sm-9">@Model.Category.Name</dd>

            <dt class="col-sm-3">Kho</dt>
            <dd class="col-sm-9">@Model.Warehouse.Name</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Xóa</button> |
            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
        </form>
    </div>
</div>