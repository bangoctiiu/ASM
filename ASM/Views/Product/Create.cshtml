@model ASM.Models.Product

@{
    ViewData["Title"] = "Tạo sản phẩm mới";
}

<div class="container mt-4" style="max-width: 700px;">
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h2 class="mb-0">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <!-- SỬA Ở ĐÂY: Hiển thị một danh sách tất cả lỗi ở trên cùng -->
                <div asp-validation-summary="All" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-semibold"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Quantity" class="form-label fw-semibold"></label>
                        <input asp-for="Quantity" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Price" class="form-label fw-semibold"></label>
                        <input asp-for="Price" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="CategoryId" class="form-label fw-semibold"></label>
                        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                            <option value="">-- Chọn danh mục --</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="WarehouseId" class="form-label fw-semibold"></label>
                        <select asp-for="WarehouseId" class="form-select" asp-items="ViewBag.WarehouseId">
                            <option value="">-- Chọn kho hàng --</option>
                        </select>
                    </div>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary"><i class="fa-solid fa-save me-2"></i>Tạo mới</button>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
