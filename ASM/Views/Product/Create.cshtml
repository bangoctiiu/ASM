@model ASM.Models.Product

@{
    ViewData["Title"] = "Tạo sản phẩm mới";
}

<div class="card shadow border-0 rounded-lg card-custom">
    <div class="card-header bg-primary text-white text-center">
        <h3 class="mb-0">@ViewData["Title"]</h3>
    </div>
    <div class="card-body p-4">
        <form asp-action="Create" method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold"><i class="fas fa-box me-2"></i>Tên sản phẩm</label>
                        <input asp-for="Name" class="form-control" placeholder="Nhập tên sản phẩm..." />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-bold"><i class="fas fa-align-left me-2"></i>Mô tả</label>
                        <textarea asp-for="Description" class="form-control" rows="5" placeholder="Mô tả chi tiết về sản phẩm..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Quantity" class="form-label fw-bold"><i class="fas fa-cubes me-2"></i>Số lượng</label>
                            <input asp-for="Quantity" type="number" class="form-control" placeholder="VD: 100" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Price" class="form-label fw-bold"><i class="fas fa-dollar-sign me-2"></i>Giá (VNĐ)</label>
                            <input asp-for="Price" type="number" class="form-control" placeholder="VD: 50000" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label fw-bold"><i class="fas fa-tags me-2"></i>Danh mục</label>
                        <select asp-for="CategoryId" class="form-control select2-basic" asp-items="ViewBag.CategoryId">
                            <option value="">-- Chọn danh mục --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="WarehouseId" class="form-label fw-bold"><i class="fas fa-warehouse me-2"></i>Kho hàng</label>
                        <select asp-for="WarehouseId" class="form-control select2-basic" asp-items="ViewBag.WarehouseId">
                            <option value="">-- Chọn kho hàng --</option>
                        </select>
                        <span asp-validation-for="WarehouseId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MaNCC" class="form-label fw-bold"><i class="fas fa-industry me-2"></i>Nhà cung cấp</label>
                        <select asp-for="MaNCC" class="form-control select2-basic" asp-items="ViewBag.MaNCC">
                            <option value="">-- Chọn nhà cung cấp --</option>
                        </select>
                        <span asp-validation-for="MaNCC" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <hr class="my-4" />

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Quay lại</a>
                <button type="submit" class="btn btn-primary"><i class="fas fa-plus me-2"></i>Tạo sản phẩm</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        $(document).ready(function () {
            $('.select2-basic').select2({
                placeholder: "-- Chọn một mục --",
                allowClear: true,
                theme: "bootstrap-5"
            });
        });
    </script>
}
