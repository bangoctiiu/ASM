@model ASM.Models.Product

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}

<div class="card shadow border-0 rounded-lg mt-4">
    <div class="card-header bg-primary text-white text-center">
        <h3 class="mb-0">@ViewData["Title"]: <span class="fw-light">@Model.Name</span></h3>
    </div>
    <div class="card-body p-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImagePath" /> @* Giữ lại đường dẫn ảnh cũ nếu không thay *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold"><i class="fas fa-box me-2"></i></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-bold"><i class="fas fa-align-left me-2"></i></label>
                        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CreatedAt" class="form-label fw-bold"><i class="fas fa-calendar-alt me-2"></i></label>
                        <input asp-for="CreatedAt" class="form-control" readonly />
                        <small class="form-text text-muted">Không thể thay đổi ngày tạo sản phẩm.</small>
                    </div>

                    <!-- Chọn ảnh mới -->
                    <div class="mb-3">
                        <label class="form-label fw-bold"><i class="fas fa-image me-2"></i>Ảnh sản phẩm</label>
                        @if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <div class="mb-2">
                                <img src="@Model.ImagePath" alt="Ảnh sản phẩm" style="max-width:200px;" />
                            </div>
                        }
                        <input type="file" name="imageFile" class="form-control" accept="image/*" onchange="previewImage(event)" />
                        <img id="preview" src="#" style="max-width:200px; display:none; margin-top:10px;" />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Quantity" class="form-label fw-bold"><i class="fas fa-cubes me-2"></i></label>
                            <input asp-for="Quantity" type="number" class="form-control" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Price" class="form-label fw-bold"><i class="fas fa-dollar-sign me-2"></i></label>
                            <input asp-for="Price" type="number" step="any" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label fw-bold"><i class="fas fa-tags me-2"></i></label>
                        <select asp-for="CategoryId" class="form-control select2-basic" asp-items="ViewBag.CategoryList"></select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="WarehouseId" class="form-label fw-bold"><i class="fas fa-warehouse me-2"></i></label>
                        <select asp-for="WarehouseId" class="form-control select2-basic" asp-items="ViewBag.WarehouseList"></select>
                        <span asp-validation-for="WarehouseId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MaNCC" class="form-label fw-bold"><i class="fas fa-industry me-2"></i></label>
                        <select asp-for="MaNCC" class="form-control select2-basic" asp-items="ViewBag.SupplierList"></select>
                        <span asp-validation-for="MaNCC" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <hr class="my-4" />

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Quay lại danh sách</a>
                <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Lưu thay đổi</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $('.select2-basic').select2({
                placeholder: "Vui lòng chọn một mục",
                theme: "bootstrap-5"
            });
        });

        function previewImage(event) {
            var reader = new FileReader();
            reader.onload = function () {
                var output = document.getElementById('preview');
                output.src = reader.result;
                output.style.display = 'block';
            }
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
}
