@model ASM.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow border-0" style="max-width: 800px;">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0"><i class="fas fa-info-circle me-2"></i>@ViewData["Title"]</h4>
        </div>
        <div class="card-body p-4">
            <h5 class="card-title mb-4">Thông tin chi tiết của: <span class="fw-bold">@Model.Name</span></h5>

            <dl class="row">
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Description)</dt>
                <dd class="col-sm-8">@(Model.Description ?? "Không có mô tả")</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Price)</dt>
                <dd class="col-sm-8">@Model.Price.ToString("N0") VNĐ</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Quantity)</dt>
                <dd class="col-sm-8">@Model.Quantity</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Category)</dt>
                <dd class="col-sm-8">@Model.Category?.Name</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Warehouse)</dt>
                <dd class="col-sm-8">@Model.Warehouse?.Name</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Supplier)</dt>
                <dd class="col-sm-8">@Model.Supplier?.TenNCC</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CreatedAt)</dt>
                <dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
            </dl>

            <hr class="my-4" />

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"><i class="fas fa-pen me-2"></i>Sửa</a>
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Quay lại danh sách</a>
            </div>
        </div>
    </div>
</div>
