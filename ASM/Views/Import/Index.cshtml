@model IEnumerable<ASM.Models.ImportSlip>

@{
    ViewData["Title"] = "Lịch sử Nhập kho";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus me-2"></i>Tạo Phiếu Nhập Mới</a>
    </div>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Mã Phiếu</th>
                        <th>Ngày Nhập</th>
                        <th>Người Tạo</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>#@item.Id.ToString("D5")</td>
                            <td>@item.ImportDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@item.User?.FullName</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info"><i class="fa-solid fa-eye"></i> Xem chi tiết</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>