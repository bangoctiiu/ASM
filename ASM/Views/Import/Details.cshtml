@model ASM.Models.ImportSlip

@{
    ViewData["Title"] = "Chi tiết Phiếu nhập #" + Model.Id.ToString("D5");
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <hr />
    <div>
        <dl class="row">
            <dt class="col-sm-3">Ngày nhập:</dt>
            <dd class="col-sm-9">@Model.ImportDate.ToString("dd/MM/yyyy HH:mm")</dd>
            <dt class="col-sm-3">Người tạo:</dt>
            <dd class="col-sm-9">@Model.User?.FullName</dd>
        </dl>
    </div>
    <h4 class="mt-4">Chi tiết sản phẩm</h4>
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá nhập (VNĐ)</th>
                <th>Thành tiền (VNĐ)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model.ImportSlipDetails)
            {
                <tr>
                    <td>@detail.Product.Name</td>
                    <td>@detail.Quantity</td>
                    <td>@detail.ImportPrice.ToString("N0")</td>
                    <td>@((detail.Quantity * detail.ImportPrice).ToString("N0"))</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </div>
</div>
