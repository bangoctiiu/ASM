@model ASM.Models.ImportSlipViewModel
@{
    ViewData["Title"] = "Tạo Phiếu Nhập Kho";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary text-white text-center">
        <h3 class="mb-0">@ViewData["Title"]</h3>
    </div>
    <div class="card-body p-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="ImportDate" class="form-label fw-bold"></label>
                    <input asp-for="ImportDate" type="datetime-local" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="MaNCC" class="form-label fw-bold"></label>
                    <select asp-for="MaNCC" class="form-select" asp-items="ViewBag.SupplierList" id="supplierSelect">
                        <option value="">-- Chọn nhà cung cấp --</option>
                    </select>
                </div>
            </div>
            <hr />
            <h4>Chi tiết sản phẩm</h4>
            <table class="table table-bordered" id="importTable">
                <thead>
                    <tr>
                        <th style="width:50%">Sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Giá nhập</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
            <button type="button" id="addProductBtn" class="btn btn-success mt-2" disabled>
                <i class="fa fa-plus me-2"></i>Thêm sản phẩm
            </button>
            <hr />
            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                <button type="submit" class="btn btn-primary">Lưu Phiếu Nhập</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(function () {
            let productIndex = 0;
            let cachedOptions = "";

            $("#supplierSelect").change(function () {
                let supplierId = $(this).val();
                $("#importTable tbody").empty();
                productIndex = 0;
                if (!supplierId) {
                    $("#addProductBtn").prop("disabled", true);
                    cachedOptions = "";
                    return;
                }
                $.get('@Url.Action("GetProductsBySupplier", "Import")', { supplierId }, function (data) {
                    cachedOptions = "";
                    if (data && data.length) {
                        data.forEach(item => {
                            cachedOptions += `<option value="${item.value}">${item.text}</option>`;
                        });
                        $("#addProductBtn").prop("disabled", false);
                        addRow();
                    } else {
                        alert("Nhà cung cấp này chưa có sản phẩm");
                        $("#addProductBtn").prop("disabled", true);
                    }
                });
            });

            function addRow() {
                let row = `
                <tr>
                    <td>
                        <select name="Details[${productIndex}].ProductId" class="form-select" required>
                            <option value="">-- Chọn sản phẩm --</option>${cachedOptions}
                        </select>
                    </td>
                    <td><input type="number" name="Details[${productIndex}].Quantity" min="1" class="form-control" required /></td>
                    <td><input type="number" name="Details[${productIndex}].ImportPrice" min="0.01" step="0.01" class="form-control" required /></td>
                    <td><button type="button" class="btn btn-danger btn-sm remove">X</button></td>
                </tr>`;
                $("#importTable tbody").append(row);
                productIndex++;
            }

            $("#addProductBtn").click(addRow);

            $("#importTable").on("click", ".remove", function () {
                $(this).closest("tr").remove();
                $("#importTable tbody tr").each(function (i, tr) {
                    $(tr).find("select, input").each(function () {
                        if (this.name) this.name = this.name.replace(/\[\d+\]/, `[${i}]`);
                    });
                });
                productIndex = $("#importTable tbody tr").length;
            });
        });
    </script>
}
