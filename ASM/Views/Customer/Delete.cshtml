@model ASM.Models.Customer
@{
    ViewData["Title"] = "Xóa khách hàng";
}

<h2>@ViewData["Title"]</h2>

<h4>Bạn có chắc chắn muốn xóa khách hàng này?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-3">Họ và tên</dt>
        <dd class="col-sm-9">@Model.FullName</dd>

        <dt class="col-sm-3">Số điện thoại</dt>
        <dd class="col-sm-9">@Model.PhoneNumber</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Tuổi</dt>
        <dd class="col-sm-9">@Model.Age</dd>

        <dt class="col-sm-3">Địa chỉ</dt>
        <dd class="col-sm-9">@Model.Address</dd>

        <dt class="col-sm-3">Giới tính</dt>
        <dd class="col-sm-9">@Model.Gender</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
