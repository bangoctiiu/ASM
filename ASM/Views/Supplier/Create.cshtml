@model ASM.Models.Supplier

@{
    ViewData["Title"] = "Thêm nhà cung cấp mới";
}

<div class="card shadow border-0 rounded-lg mt-4">
    <div class="card-header bg-primary text-white text-center">
        <h3 class="mb-0">@ViewData["Title"]</h3>
    </div>
    <div class="card-body p-4">
        <form asp-action="Create" method="post">
            @* Controller đã tự động tạo mã NCC, chúng ta sẽ hiển thị nó ở dạng chỉ đọc.
                Thẻ input ẩn này đảm bảo giá trị được gửi đi cùng form.
            *@
            <input type="hidden" asp-for="MaNCC" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="MaNCC" class="form-label fw-bold"><i class="fas fa-key me-2"></i></label>
                        <input asp-for="MaNCC" class="form-control" readonly />
                        <small class="form-text text-muted">Mã nhà cung cấp được tạo tự động.</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TenNCC" class="form-label fw-bold"><i class="fas fa-building me-2"></i></label>
                        <input asp-for="TenNCC" class="form-control" placeholder="Nhập tên công ty..." />
                        <span asp-validation-for="TenNCC" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ContactName" class="form-label fw-bold"><i class="fas fa-user me-2"></i></label>
                        <input asp-for="ContactName" class="form-control" placeholder="Nhập tên người liên hệ..." />
                        <span asp-validation-for="ContactName" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="SDT" class="form-label fw-bold"><i class="fas fa-phone me-2"></i></label>
                        <input asp-for="SDT" class="form-control" placeholder="Nhập số điện thoại..." />
                        <span asp-validation-for="SDT" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-bold"><i class="fas fa-envelope me-2"></i></label>
                        <input asp-for="Email" class="form-control" placeholder="Nhập địa chỉ email..." />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DiaChi" class="form-label fw-bold"><i class="fas fa-map-marker-alt me-2"></i></label>
                        <textarea asp-for="DiaChi" class="form-control" rows="3" placeholder="Nhập địa chỉ chi tiết..."></textarea>
                        <span asp-validation-for="DiaChi" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <hr class="my-4" />

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Quay lại danh sách</a>
                <button type="submit" class="btn btn-primary"><i class="fas fa-plus-circle me-2"></i>Thêm nhà cung cấp</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
