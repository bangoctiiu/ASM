@model ASM.Models.LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="login-container">
    <div class="login-card">
        <div class="login-card-header text-center">
            <h2 class="mb-2">Chào mừng trở lại!</h2>
            <p class="text-muted">Đăng nhập để tiếp tục</p>
        </div>

        <div class="login-card-body">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }

            <form asp-controller="Account" asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                @* Tìm đến khối div này trong file Login.cshtml và sửa lại *@

                <div class="form-floating mb-3">
                    @* SỬA Ở ĐÂY: Đổi asp-for="Email" thành asp-for="Username" *@
                    <input asp-for="Username" class="form-control" placeholder="Tên đăng nhập" />
                    <label asp-for="Username"><i class="fa-regular fa-user me-2"></i>Tên đăng nhập</label>
                    <span asp-validation-for="Username" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Mật khẩu" />
                    <label asp-for="Password"><i class="fa-solid fa-lock me-2"></i>Mật khẩu</label>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="RememberMe">
                        <label class="form-check-label" asp-for="RememberMe">
                            Ghi nhớ tôi
                        </label>
                    </div>
                    <a asp-action="ForgotPassword" class="text-decoration-none small">Quên mật khẩu?</a>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg fw-bold">Đăng nhập</button>
                </div>
            </form>

            <div class="text-center mt-4">
                <small class="text-muted">Chưa có tài khoản? <a asp-controller="Account" asp-action="Register" class="text-decoration-none fw-bold">Đăng ký ngay</a></small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}