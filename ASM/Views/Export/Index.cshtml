@model IEnumerable<ASM.Models.ExportSlip>

@{
    ViewData["Title"] = "Quản lý Phiếu Xuất Kho";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-plus me-2"></i>Tạo phiếu xuất mới
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.ExportSlipCode)</th>
                            <th>@Html.DisplayNameFor(model => model.ExportDate)</th>
                            <th>@Html.DisplayNameFor(model => model.Customer)</th>
                            <th>@Html.DisplayNameFor(model => model.Reason)</th>
                            <th>@Html.DisplayNameFor(model => model.User)</th>
                            <th class="text-end" style="width: 120px;">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center">Chưa có phiếu xuất kho nào.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>@Html.DisplayFor(modelItem => item.ExportSlipCode)</strong></td>
                                    <td>@item.ExportDate.ToString("dd/MM/yyyy")</td>
                                    <td>@item.Customer?.FullName</td>
                                    <td>@item.Reason</td>
                                    <td>@item.User?.FullName</td>
                                    <td class="text-end">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Xem chi tiết"><i class="fa-solid fa-circle-info"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Xóa"><i class="fa-solid fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>