@model IEnumerable<ASM.Models.Warehouse>

@{
    ViewData["Title"] = "Quản lý Kho hàng";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-plus me-2"></i>Tạo kho hàng mới
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Code)</th>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>Địa chỉ đầy đủ</th>
                            <th>@Html.DisplayNameFor(model => model.ContactPerson)</th>
                            <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                            <th class="text-end" style="width: 150px;">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center">Chưa có kho hàng nào.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>@Html.DisplayFor(modelItem => item.Code)</strong></td>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>
                                        @(item.AddressLine1 + ", " + item.District + ", " + item.Province)
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.ContactPerson)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                    <td class="text-end">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Xem chi tiết"><i class="fa-solid fa-circle-info"></i></a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Sửa"><i class="fa-solid fa-pen"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Xóa"><i class="fa-solid fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>